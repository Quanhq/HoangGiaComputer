<script>
    getAllCategory()
    function getAllCategory() {
        $.ajax({
            type: 'GET',
            url: '/category/get-all-category',
            data: {},
            success: function (data) {
                $('.list-category').empty()
                $('.list-category').append(`<li class="nav-links__item nav-links__item--with-submenu"><a href="/"><span>Trang Chủ</span></a></li>`)
                for (let i = 0; i < data.length; i++) {
                    $('.list-category').append(` <li class="nav-links__item nav-links__item--with-submenu"><a href="/category/?category=${data[i].categoryName}"><span>${data[i].categoryName}</span></a></li>`)
                }
            },
            error: function (err) {
                console.log(err);
            }
        });
    }
</script>