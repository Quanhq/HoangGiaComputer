<div id="addEmployeeModal" style="margin-top: 50px" class="modal fade">
	<div class="modal-dialog modal-xl" style="max-width:1250px;">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Thêm Sản Phẩm</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<form action="/admin/product/add-product" enctype="multipart/form-data" method="POST">

				<div class="modal-body">
					<div class="form-group">
						<label>Tên Sản Phẩm</label>
						<input id="add-name-product" name="productName" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Tên Danh Mục</label>
						<select id="add-category-product" name="categoryName"></select>
					</div>

					<div class="form-group">
						<label>Giá</label>
						<input id="add-price-product" name="price" type="number" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Giảm Giá</label>
						<input id="add-discount-product" name="discount" type="number" class="form-control" required>
					</div>

					

					<div class="form-group">
						<label>Thông Số Sản Phẩm</label>
						<textarea name="information2" id="editor-information2"></textarea>
					</div>


					<div class="form-group">
						<label>Thông Số Kỹ Thuật</label>
						<textarea name="information" id="editor-information"></textarea>
					</div>

					<div class="form-group">
						<label>Mô Tả</label>
						<textarea name="describe" id="editor"></textarea>
					</div>

					<div hidden class="form-group">
						<label>Mô Tả</label>
						<textarea id="add-date-product" name="dateCreate" class="form-control" required></textarea>
					</div>

					<div class="form-group">
						<label>Ảnh</label>
						<input id="add-image-product" name="multi-files" type='file' accept='image/*' multiple>
						<div class="box-add-image">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-success" value="Upload">
				</div>
			</form>


		</div>
	</div>
</div>
