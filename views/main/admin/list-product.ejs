		});

	ClassicEditor
		.create(document.querySelector('#editor-information'))
		.then(editor => {
		})
		.catch(error => {
			console.error(error);
		});

		ClassicEditor
		.create(document.querySelector('#editor-information2'))
		.then(editor => {
		})
		.catch(error => {
			console.error(error);
		});

	ClassicEditor
		.create(document.querySelector('#edit-editor'))
		.then(editor => {
			valueEditdescription = editor
		})
		.catch(error => {
			console.error(error);
		});

	ClassicEditor
		.create(document.querySelector('#edit-editor-information'))
		.then(editor => {
			valueEditInformation = editor
		})
		.catch(error => {
			console.error(error);
		});

		ClassicEditor
		.create(document.querySelector('#edit-editor-information2'))
		.then(editor => {
			valueEditInformation2 = editor
		})
		.catch(error => {
			console.error(error);
		});


	let arrCategory = []
	getAllCategory()
	getAllCProduct()
	function getAllCategory() {
		$.ajax({
			type: 'GET',
			url: '/admin/category/get-all-category',
			data: {},
			success: function (data) {
				arrCategory = data
			},
			error: function (err) {
				console.log(err);
			}
		});
	}
	function getAllCProduct() {
		$.ajax({
			type: 'GET',
			url: '/admin/product/get-all-product',
			data: {},
			success: function (data) {
				$('.table-product tbody').empty()
				for (let i = 0; i < data.length; i++) {
					$('.table-product tbody').append(`
					<tr>
						<td><img src="/images/product/${data[i].image[0]}" style="width:80px;height:80px"></td>
						<td>${data[i].productName}</td>
						<td>${data[i].categoryName}</td>
						<td>${data[i].price}</td>
						<td>${data[i].discount}</td>
						<td>${data[i].dateCreate}</td>
						<td>
							<a href="#editEmployeeModal" onclick="showModalEdit('${data[i]._id}')" data-toggle="modal" class="edit"><i class="material-icons"
                                   title="Edit">&#xE254;</i></a>
							<a href="#deleteProductModal" onclick="showModelDelete('${data[i]._id}')" class="delete" data-toggle="modal"><i class="material-icons"
									data-toggle="tooltip" title="Delete">&#xE872;</i></a>
						</td>
					</tr>
                `)
				}
			},
			error: function (err) {
				console.log(err);
			}
		});
	}
	// <a href="#editEmployeeModal" class="edit" data-toggle="modal"><i class="material-icons"
	// 								data-toggle="tooltip" title="Edit">&#xE254;</i></a>

	function showModelDelete(id) {
		$('#id-delect-product').val(id)
	}
	function deleteCategory() {
		let id = $('#id-delect-product').val()
		$.ajax({
			type: 'GET',
			url: '/admin/product/remove-product',
			data: { id: id },
			success: function (data) {
				getAllCategory()
			},
			complete: function (data) {

			},
			error: function (err) {
				console.log(err);
			}
		});
	}


	function showModalAddProduct() {
		$('#add-category-product').empty()
		for (let i = 0; i < arrCategory.length; i++) {
			$('#add-category-product').append($('<option>', {
				value: arrCategory[i].categoryName,
				text: arrCategory[i].categoryName
			}));
		}
		let dateCreate = new Date().toLocaleDateString();
		$('#add-date-product').val(dateCreate)
		document.getElementById("add-image-product").value = "";
		$('.box-add-image').empty()
	}


	function showModalEdit(id) {
		$.ajax({
			type: 'GET',
			url: '/admin/get-product-detail',
			data: { id: id },
			success: function (data) {
				console.log(data);
				$('#edit-id-product').val(data._id)
				$('#edit-name-product').val(data.productName)
				$('#edit-category-product').val(data.categoryName)
				$('#edit-price-product').val(data.price)
				$('#edit-discount-product').val(data.discount)
				$('#edit-date-product').val(data.dateCreate)
				$('#edit-box-image').empty()
				for (let i = 0; i < data.image.length; i++) {
					$('#edit-box-image').append(`<img src="/images/product/${data.image[i]}" height="150">`)
				}
				valueEditInformation.setData(data.information);
				valueEditInformation2.setData(data.information2);
				valueEditdescription.setData(data.describe);

			},
			error: function (err) {
				console.log(err);
			}
		});

	}

	function readFile() {

		if (this.files) {
			arrUploadImage = []
			for (let i = 0; i < this.files.length; i++) {

				var FR = new FileReader();

				FR.addEventListener("load", function (e) {
					$('.box-add-image').append(`<img src="${e.target.result}" height="150">`)
				});
				FR.readAsDataURL(this.files[i]);
			}
		}
	}
	document.getElementById("add-image-product").addEventListener("change", readFile);



</script>