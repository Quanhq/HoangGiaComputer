    function getAllCategory() {
        $.ajax({
            type: 'GET',
            url: '/category/get-all-category',
            data: {},
            success: function (data) {
                $('.list-menu-category').empty()
                $('.list-menu-category').append(`<li class="active dropdown yamm-fw"><a href="/" data-hover="dropdown" class="dropdown-toggle">Trang Chủ</a></li>`)
                for (let j = 0; j < data.length; j++) {
                    if (j < 7) {
                        $('.list-menu-category').append(`<li class="active dropdown yamm-fw"><a href="/category/?category=${data[j].categoryName}" data-hover="dropdown" class="dropdown-toggle">${data[j].categoryName}</a></li>`)
                    }
                }

            },
            error: function (err) {
                console.log(err);
            }
        });
    }

    function getProductDetail() {
        let selectProduct = getDataURL('product') || ''
        $.ajax({
            type: 'GET',
            url: '/get-product-detail',
            data: { id: selectProduct },
            success: function (data) {
                console.log(data);
                let product = data[0]
                let pricing
                let categoryName = product.categoryName
                $('#name-product').html(product.productName)
                $('#orgin-product').html(product.origin)
                $('#color-product').html(product.color)
                $('#category-product').html(product.categoryName)
                $('#thinkness-product').html(product.thickness)

                $('#descrip-product').html(product.describe)
                $('#descrip-name-product').html(product.productName)
                $('#descrip-image-product').attr("src", "/images/product/" + product.image[0]);


                let arrImg = product.image
                $('#box-detal-show').empty()
                $('#box-detal-list').empty()

                for (let i = 0; i < arrImg.length; i++) {
                    $('#box-detal-show').append(`
                    <img src="/images/product/${arrImg[i]}"
                                                    alt="shoe image">
                    `)
                    $('#box-detal-list').append(`
                    <div class="img-item">
                                            <a href="#" data-id="${i + 1}">
                                                <img src="/images/product/${arrImg[i]}"
                                                    alt="shoe image">
                                            </a>
                                        </div>
                    `)
                }
                test()
                getProductRelate(categoryName)
            },
            error: function (err) {
                console.log(err);
            }
        });
    }
    function getProductRelate(categoryName) {
        $.ajax({
            type: 'GET',
            url: '/get-product-relate',
            data: { categoryName: categoryName },
            success: function (data) {
                $('#box-product-detail').empty()
                for (let i = 0; i < data.length; i++) {
                    let product = data[i]
                    $('#box-product-detail').append(`
                <div class="item item-carousel">
