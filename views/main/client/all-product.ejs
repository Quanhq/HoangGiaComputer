    function checkDataPagination(value) {
        // $('html, body').animate({ scrollTop: $("#section-box-news").offset().top }, 1000);
        let category = getDataURL('category') || ''
        window.history.pushState({}, '', location.origin + location.pathname + '?category=' + category + '&page=' + value);
